        "opacity": 1,
        "zIndex": 1,
        "content": "## セクション名",
        "style": {
          "color": "#ffffff",
          "fontSize": 60,
          "fontFamily": "sans-serif",
          "fontWeight": "bold",
          "fontStyle": "normal",
          "textDecoration": "none",
          "textAlign": "center",
          "lineHeight": 1.5,
          "backgroundColor": null,
          "padding": 0
