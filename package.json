{
  "name": "slidini",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun run --filter @slidini/app dev",
    "build": "bun run --filter @slidini/app build",
    "typecheck": "bun run --filter '*' typecheck",
    "check": "bunx @biomejs/biome check .",
    "format": "bunx @biomejs/biome format --write .",
    "knip": "knip",
    "jscpd": "jscpd packages/*/src --reporters console",
    "test": "bun test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@happy-dom/global-registrator": "^20.7.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/bun": "^1.3.9",
    "happy-dom": "^20.7.0",
    "jscpd": "^4.0.8",
    "knip": "^5.85.0",
    "typescript": "^5.7.3"
  }
}
