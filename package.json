{
  "name": "slidini",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun run --filter @slidini/app dev",
    "build": "bun run --filter @slidini/app build",
    "typecheck": "bun run --filter '*' typecheck",
    "check": "bunx @biomejs/biome check .",
    "format": "bunx @biomejs/biome format --write .",
    "knip": "knip",
    "jscpd": "jscpd packages/*/src --reporters console"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "jscpd": "^4.0.8",
    "knip": "^5.85.0",
    "typescript": "^5.7.3"
  }
}
